<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sl_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/sl_space_size"
        android:paddingBottom="@dimen/sl_bottom_size"
        android:scrollbars="vertical"
        tools:ignore="RtlSymmetry" />

    <FrameLayout
        android:id="@+id/sl_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sl_bottom_size"
        android:layout_gravity="bottom"
        android:background="#cc000000">

        <Button
            android:id="@+id/sl_category_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableEnd="@drawable/ic_sl_signal_cellular_black"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/sl_folder_text_color"
            android:textSize="16sp"
            tools:text="所有图片" />

    </FrameLayout>

</FrameLayout>
